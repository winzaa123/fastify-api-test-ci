{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2016",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build/",
    "baseUrl": ".",

    "noImplicitAny": false,
    "lib": ["es6", "esnext.asynciterable"]
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts"
  ]
}
